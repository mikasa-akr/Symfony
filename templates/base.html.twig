    <body>
<nav class="navbar navbar-expand-lg navbar-light" style="background-color: #EF7C8E;">
  <a class="navbar-brand" href="{{ path('app_member_home') }}">NetForm</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <a class="nav-link" href="{{ path('app_member_home') }}">Home <span class="sr-only">(current)</span></a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="{{ path('app_member_request') }}">friend requests</a>
      </li>  

    </ul>
    {{ form_start(form) }}
    {{ form_widget(form.name) }}
    {{ form_end(form) }}

    {% if app.user %}
            <div class="mb-3">
                <a href="{{ path('app_logout') }}">Logout</a>
            </div>
      {% endif %}
</nav>       
{% if search is not empty %}
{% for user in search %}
    <li>{{ user.name }}</li>
    <form action="{{path('app_member_search_invite')}}" method="post" >
        <input type="hidden" value="{{user.id}}" name="userId">
    <button type="submit">Invite</button>
</form>
{% endfor %}
{% endif %}                   
