<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
  </head>
  <body>
  <h1>liste Contenus</h1>
          {% if app.user %}
            <div class="mb-3">
                {#You are logged in as {{ app.user.userIdentifier }},#} <a href="{{ path('app_logout') }}">Logout</a>
            </div>
          {% endif %}
<table class="table align-middle mb-0 bg-white">
  <thead class="bg-light">
    <tr>
	  <th>Id</th>
      <th>text</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
	 {% for contenus in contenu %}
            <tr>
                	<td>{{ contenus.id }}</td>
                <td>
        		<div class="d-flex align-items-center">
          		<div class="ms-3">    
				    <p class="fw-bold mb-1">{{ contenus.text }}</p>
				</div>
        		</div>
      			</td>
                <td>
                    <a href="{{ path('app_moderateur_show', {'id': contenus.id}) }}">show</a>
                    <a href="{{ path('app_moderateur_edit', {'id': contenus.id}) }}">edit</a>
                    <a href="{{ path('app_moderateur_delete', {'id': contenus.id}) }}">delete</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
  </tbody>
</table>
</body>